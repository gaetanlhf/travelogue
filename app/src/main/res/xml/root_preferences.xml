<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Localisation">

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_enable_auto_gps"
            android:title="Enable auto getting GPS point" />
        <EditTextPreference
            app:key="edittext_time_between_auto"
            app:dependency="switch_enable_auto_gps"
            app:title="Time between each"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Account">

        <Preference
            app:key="log_out"
            app:summary="Click here to log out from your account"
            app:title="Logout">


        </Preference>

    </PreferenceCategory>

</PreferenceScreen>