<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:gravity="center"
android:orientation="vertical"
tools:context=".activity.ForgotPasswordActivity">

<ImageView
    android:id="@+id/new_travel_activity_image_view"
    android:layout_width="wrap_content"
    android:layout_height="206dp"
    android:layout_marginBottom="20dp"
    app:srcCompat="@drawable/undraw_new_entries" />

    <TextView
        android:id="@+id/new_travel_activity_textview_1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/new_travel_activity_text_view_1"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/new_travel_activity_textview_2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/new_travel_activity_text_view_2" />

    <EditText
        android:id="@+id/new_travel_activity_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/activity_new_travel_edit_text_hint"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textColorHint="#757575" />

<Button
    android:id="@+id/new_travel_activity_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:onClick="onClickSaveTravel"
    android:text="@string/btn_save" />

    <ProgressBar
        android:id="@+id/new_travel_activity_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>
