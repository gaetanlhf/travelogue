<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/welcome_slide_5_image_view"
        android:layout_width="wrap_content"
        android:layout_height="206dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/undraw_cloud" />

    <TextView
        android:id="@+id/welcome_slide_5_text_view_1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_slide_5_text_view_1"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/welcome_slide_5_text_view_2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="@string/welcome_slide_5_text_view_2" />

</LinearLayout>