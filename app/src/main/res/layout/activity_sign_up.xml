<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.SignUpActivity">

    <ImageView
        android:id="@+id/sign_up_activity_image_view"
        android:layout_width="wrap_content"
        android:layout_height="206dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/undraw_sign_in" />

    <TextView
        android:id="@+id/sign_up_activity_textview_1"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_up_activity_textview_1"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/sign_up_activity_textview_2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/sign_up_activity_text_view_2" />

    <EditText
        android:id="@+id/sign_up_activity_edittext_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/email_text_hint"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_textview"
        app:layout_constraintStart_toStartOf="@+id/sign_up_textview"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_textview" />

    <EditText
        android:id="@+id/sign_up_activity_edittext_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/password_text_hint"
        android:inputType="textPassword"
        android:minHeight="48dp"
        android:textColorHint="#757575"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_activity_edittext_email"
        app:layout_constraintStart_toStartOf="@+id/sign_up_activity_edittext_email"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_activity_edittext_email" />

    <Button
        android:id="@+id/sign_up_activity_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSignUp"
        android:text="@string/sign_up_btn"
        app:layout_constraintEnd_toEndOf="@+id/sign_up_activity_edittext_password"
        app:layout_constraintStart_toStartOf="@+id/sign_up_activity_edittext_password"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_activity_edittext_password" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_with_google_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSignInWithGoogle" />

    <ProgressBar
        android:id="@+id/sign_up_activity_spinner"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_activity_button"
        app:layout_constraintVertical_bias="0.5" />

</LinearLayout>
